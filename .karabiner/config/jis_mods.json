{
  "title": "JIS modifiers",
  "rules": [
    {
      "description": "Change jis_pc_nfer (key 1) key to command+control+option+shift.",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "japanese_pc_nfer",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_shift",
              "modifiers": [
                "left_command",
                "left_control",
                "left_option"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Change jis_pc_xfer (key 2) key to command+control+option+shift.",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "japanese_pc_xfer",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_shift",
              "modifiers": [
                "left_command",
                "left_control",
                "left_option"
              ]
            }
          ]
        }
      ]
    }
  ]
}
