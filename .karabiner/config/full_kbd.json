{
  "title": "Full keyboard reassignments",
  "rules": [
    {
      "description": "Change right control key to command+control+option+shift.",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "right_control",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_shift",
              "modifiers": [
                "left_command",
                "left_control",
                "left_option"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Change right command key to command+control+option+shift.",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "right_command",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_shift",
              "modifiers": [
                "left_command",
                "left_control",
                "left_option"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Keypad 7 launches mail",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "keypad_7",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
              {
                  "shell_command": "open '/Applications/Spark.app'"
              }
          ]
        }
      ]
    },
    {
      "description": "Keypad 8 launches calculator",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "keypad_8",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
              {
                  "shell_command": "open '/Applications/Calculator.app'"
              }
          ]
        }
      ]
    },
    {
      "description": "Keypad 9 launches Emacs",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "keypad_9",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
              {
                  "shell_command": "open '/Applications/Emacs.app'"
              }
          ]
        }
      ]
    }
  ]
}
