# -*- Mode: shell-script -*-
#
# Common shell aliases and functions.   These should work under both zsh and bash.
#
alias ..='cd ..'
alias ...='cd ../..'
alias ,=popd
alias c=cd
alias d=dirs
alias j=jobs
alias p=pushd
alias s=ssh

alias gupv='git pull --rebase --autostash -v'
alias gw='git worktree'

# gwb='git worktree add -b foo ../foo origin/master'

function gack() { 
  ack -g $* 
}

function eack() { 
  emacsclient -n $( ack -g $* ) 
}

# http://stackoverflow.com/questions/714421/what-is-an-easy-way-to-do-a-sorted-diff-between-two-files
function diffs() {
        diff "${@:3}" <(sort "$1") <(sort "$2")
}

function sumcount() {
    sort | uniq -c | sort -n
}

#
# Simple dotfile management, ala
#      https://developer.atlassian.com/blog/2016/02/best-way-to-store-dotfiles-git-bare-repo/
#
alias config='/usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME'
config config --local status.showUntrackedFiles no

#
# Activate fasd
#
eval "$(fasd --init auto)"
